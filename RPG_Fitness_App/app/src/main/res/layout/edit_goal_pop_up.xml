<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="#7EC0EE">

    <TextView
        android:id="@+id/editSubType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView2"
        android:layout_below="@+id/exitEditPopUp"
        android:layout_marginTop="42dp"
        android:fontFamily="casual"
        android:text="Pick a sub-type"
        android:textSize="18dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="12dp"
        android:layout_marginTop="15dp"
        android:fontFamily="casual"
        android:text="Choose a fitness category"
        android:textSize="18dp"
        android:textStyle="bold" />

    <Spinner
        android:id="@+id/editSubSpinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editSubType"
        android:layout_alignParentStart="true"
        android:layout_marginTop="27dp"
        android:layout_alignEnd="@+id/fitCategoriesSpin">
    </Spinner>

    <Spinner
        android:id="@+id/fitCategoriesSpin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/editSubType"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/textView2"></Spinner>

    <EditText
        android:id="@+id/goalValueEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/saveEditBtn"
        android:layout_alignEnd="@+id/currentValueEdit"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="15dp"
        android:fontFamily="casual"></EditText>

    <EditText
        android:id="@+id/currentValueEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/editSubSpinner"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:fontFamily="casual"></EditText>

    <Button
        android:id="@+id/exitEditPopUp"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="X"
        android:textSize="40dp"
        android:background="?android:attr/selectableItemBackground"
        android:gravity="center"
        android:layout_alignParentEnd="true">
    </Button>

    <Button
        android:id="@+id/saveEditBtn"
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:background="?android:attr/selectableItemBackground"
        android:fontFamily="casual"
        android:text="Save"
        android:textAllCaps="false"
        android:textSize="40dp"></Button>



</RelativeLayout>