<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent">



    <Button
        android:id="@+id/exitMainQuestPopUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:text="X"
         />

    <TextView
        android:id="@+id/MasterName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/exitQuestPopUp"
        android:layout_alignParentStart="true"
        android:ems="10"
        android:text="Name" />

    <TextView
        android:id="@+id/MasterDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/MasterName"
        android:layout_marginTop="49dp"
        android:layout_marginBottom="49dp"
        android:text="Name"
        android:maxLines="10"
        android:layout_alignParentEnd="true" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignTop="@+id/MasterDescription"
        android:layout_marginTop="100dp"
        android:paddingStart="15dp"
        android:paddingLeft="15dp"
        android:id="@+id/main_listview"
        android:text="@string/app_name"
        />

    <Button
        android:id="@+id/completeMaster"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="93dp"
        android:text="Quest Completed!"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
